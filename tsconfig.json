{
  "compilerOptions": {
    "jsx": "react-jsx", // תמיכה ב-JSX עם React 17 ומעלה
    "target": "ES6", // או "ESNext"
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  }
}

